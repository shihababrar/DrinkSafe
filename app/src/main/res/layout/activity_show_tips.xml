<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/sunrisee"
    tools:context=".ShowTips">

    <TextView
        android:id="@+id/textViewShowTipsEnglish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="22dp"
        android:textColor="#000"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/textViewShowTipsBangla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textViewShowTipsEnglish"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textColor="#000"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/textViewShowTipsEnglish_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="22dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textColor="#000"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/textViewShowTipsBangla_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textColor="#000"
        android:textSize="15sp"
        android:paddingTop="22dp"
        android:layout_below="@id/textViewShowTipsEnglish_2"
        />





</LinearLayout>