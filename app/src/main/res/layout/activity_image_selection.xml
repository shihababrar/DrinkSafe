<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageSelection"
    android:orientation="vertical"
    android:background="@drawable/sunrisee">

    <ImageView
        android:id="@+id/imageViewImageSelect"
        android:src="@drawable/gallery2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="219dp"
        android:layout_marginLeft="122dp"/>
<TextView
    android:id="@+id/textviewHints"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:text="Click on the above image"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
    android:layout_marginLeft="60dp"
android:textColor="#000"
    android:layout_below="@+id/imageViewImageSelect"/>



</RelativeLayout>