<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterGallery"
    android:background="@drawable/sunrisee"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewGallery"
        android:paddingTop="20dp"
        android:layout_gravity="center"
        android:layout_width="470dp"
        android:layout_height="352dp"
        />
    <ImageView
        android:id="@+id/imageViewPicked"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="110dp"
        android:layout_below="@+id/imageViewGallery"
        />
    <TextView
        android:id="@+id/textviewRGB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:layout_below="@id/imageViewPicked"
        android:layout_marginLeft="95dp"

        />
    <Button
        android:id="@+id/buttonShowResult"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Show Result"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/textviewRGB"
        android:layout_marginLeft="60dp"
        android:textColor="#000"
        android:background="#F37335"

        />


</RelativeLayout>